<%= form_for order, {:url => { :action => (order.id ? :update : :create)} } do |f| %>

  <% if form_type == "Edit" %>
    <h4>Order Status</h4>
    <div class="radio">
      <label><input type="radio" name="placed">PLACED</label>
    </div>
    <div class="radio">
      <label><input type="radio" name="unplaced">UNPLACED</label>
    </div>
  <% end %>


  <%= f.hidden_field :user_id %>
  <h4>Shipping Address</h4>
  <div class="form-group row">
    <div class="col-lg-10">
    <%= f.select :shipping_id, @addresses %>
    </div>
  </div>

  <h4>Billing Address</h4>
  <div class="form-group row">
    <div class="col-lg-10">
    <%= f.select :billing_id, @addresses %>
    </div>
  </div>

  <h4>Billing Card</h4>
  <div class="form-group row">
    <div class="col-lg-10">
    <%= f.select :credit_card_id, @credit_cards %>
    </div>
  </div>

  <div class="form-group">
    <% if form_type == "Edit" %>
    <%= f.submit 'Update Order information', class: "btn btn-lg btn-success" %>
    <% else %>
    <%= f.submit 'Create Order in Shopping Cart', class: "btn btn-lg btn-success" %>
    <% end %>
  </div>

  <%= link_to "Delete Order",
      user_order_path(order.user, order),
      :method => :delete,
      :data => { confirm: "Are you sure?" } %>
<% end %>