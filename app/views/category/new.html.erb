<%= form_for @category, url: category_index_path do |f| %>
  <fieldset>
    <legend>New Category</legend>
    <div class="form-group">
      <%= f.label :name, 'Name', class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_field :name, class: "form-control", placeholder: "4-16 chars..." %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, 'Description', class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_area  :description, class: "form-control", rows: 8, placeholder: "More about category..." %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit 'Submit', class: "btn btn-lg btn-success" %>
      </div>
    </div>
  </fieldset>
<% end %>

