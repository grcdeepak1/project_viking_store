<%= form_for product do |f| %>
  <fieldset>
    <legend>New product</legend>

    <% if product.id.nil? == false %>
      <div class="form-group">
        <div class="col-lg-2"><p>ID</p></div>
        <div class="col-lg-10"><p><%= product.id %></p></div>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :name, 'Name', class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_field :name, class: "form-control", placeholder: "4-16 chars..." %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :price, 'Price', class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_field :price, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :sku, 'Sku', class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_field :sku, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, 'Description', class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_area  :description, class: "form-control", rows: 8, placeholder: "More about product..." %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :category_id, 'Category', class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.select :category_id, @categories %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit 'Submit', class: "btn btn-lg btn-success" %>
      </div>
    </div>
  </fieldset>
<% end %>

