<%= form_for address,  {:url => { :action => (address.id ? :update : :create) }} do |f| %>
  <fieldset>
    <legend><%= form_type %> address</legend>
    <% if address.id.nil? == false %>
      <div class="form-group row">
        <div class="col-lg-2"><p>ID</p></div>
        <div class="col-lg-10"><p><%= address.id %></p></div>
      </div>
    <% end %>

    <div class="form-group row">
      <%= f.label "User ID:", :class => "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= address.user_id %>
      </div>
      <%= f.hidden_field :user_id %>
    </div>

    <div class="form-group">
    <%= f.label :street_address, 'Street Address', class: "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :street_address, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :state, :class => "col-md-2 control-label" %>
      <div class="col-md-10">
        <%= f.collection_select :state_id, State.all, :id, :name, {}, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :city, :class => "col-md-2 control-label" %>
      <div class="col-md-10">
        <%= f.collection_select :city_id, City.all, :id, :name, {}, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :zip_code, :class => "col-md-2 control-label" %>
      <div class="col-md-10">
        <%= f.text_field :zip_code, placeholder: "enter zip code here", :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit 'Submit', class: "btn btn-lg btn-success" %>
      </div>
    </div>

  </fieldset>
<% end %>
