<h4 class="text-center"><%= "Addresses of #{@user.first_name} #{@user.last_name}" %></h4>
<article class="well">
  <table class = "table table-striped table-bordered">
    <thead>
      <th>ID</th>
      <th>User</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Created</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>
    </thead>
    <tbody>
      <% @addresses.each do |address|%>
        <tr>
          <td><%= address.id %>
          <td><%= link_to "#{name(address.user)}", user_path(address.user)%></td>
          <td><%= "#{address.street_address} #{secondary_address(address)}" %></td>
          <td><%= address.city.name %></td>
          <td><%= address.state.name %></td>
          <td><%= address.created_at.strftime("%Y-%m-%d") %></td>
          <td><%=link_to "show", '#'%></td>
          <td><%=link_to "edit", edit_user_address_path(address.user, address) %></td>
          <td><%=link_to "delete", user_address_path(address.user, address),
                                   data: { confirm: "Are you sure?" },
                                   method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</article>
